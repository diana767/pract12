<Page x:Class="pract12.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pract12.Pages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      DataContext="{Binding RelativeSource={RelativeSource Self}}"
      Title="Список студентов"
      Background="{DynamicResource MaterialDesignBackground}">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <materialDesign:Card Grid.Row="0" Margin="0,0,0,16" Padding="16">
            <StackPanel Orientation="Horizontal">
                <Button Click="go_form" 
                        Content="Добавить студента">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Plus" Width="16" Height="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Добавить студента" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>

                <Button Click="remove" 
                        Content="Удалить выбранного"
                        Margin="16,0,0,0">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Delete" Width="16" Height="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Удалить выбранного" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>

                <Button Click="Edit" 
                        Content="Редактировать"
                        Margin="16,0,0,0">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Edit" Width="16" Height="16" Margin="0,0,8,0"/>
                                <TextBlock Text="Редактировать" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>
            </StackPanel>
        </materialDesign:Card>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding service.Students}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <materialDesign:Card Margin="0,4" Padding="16" 
                                             MouseDown="StudentCard_MouseDown">
                            <StackPanel>
                                <TextBlock Text="{Binding Login}" 
                                           FontSize="16"
                                           FontWeight="Medium"
                                           Foreground="{DynamicResource MaterialDesignBody}"
                                           Margin="0,0,0,8"/>

                                <StackPanel Orientation="Horizontal" Margin="0,2">
                                    <TextBlock Text="ID:" FontWeight="SemiBold" Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding Id}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,2">
                                    <TextBlock Text="Имя:" FontWeight="SemiBold" Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding Name}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,2">
                                    <TextBlock Text="Email:" FontWeight="SemiBold" Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding Email}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,2">
                                    <TextBlock Text="Пароль:" FontWeight="SemiBold" Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding Password}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,2">
                                    <TextBlock Text="Создан:" FontWeight="SemiBold" Margin="0,0,8,0"/>
                                    <TextBlock Text="{Binding CreatedAt, StringFormat={}{0:dd.MM.yyyy HH:mm}}"/>
                                </StackPanel>
                            </StackPanel>
                        </materialDesign:Card>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>