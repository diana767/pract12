<Page x:Class="pract12.Pages.GroupForm"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pract12.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GroupForm">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <StackPanel>
                <Label>Название группы</Label>
                <TextBox Text="{Binding Title}"/>
            </StackPanel>
            <StackPanel>
                <Button Click="save">Сохранить</Button>
                <Button Click="back">Назад</Button>
            </StackPanel>
        </StackPanel>
        <ListView Grid.Column="1" ItemsSource="{Binding UserProfiles}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock>
                <Run Text="Логин: "/>
                <Run Text="{Binding Student.Login}"/>
                <Run Text=" Имя: "/>
                <Run Text="{Binding Student.Name}"/>
                <Run Text=" Email: "/>
                <Run Text="{Binding Student.Email}"/>
                    </TextBlock>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
