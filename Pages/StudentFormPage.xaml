<Page x:Class="pract12.Pages.StudentFormPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:pract12.Pages"
      xmlns:validation="clr-namespace:pract12.ValidationRules"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="600"
      Title="Форма студента"
      Background="{DynamicResource MaterialDesignBackground}">

    <Grid>
        <materialDesign:Card Margin="24" Padding="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" 
                        Background="{DynamicResource MaterialDesignToolBarBackground}"
                        Padding="24,16">
                    <TextBlock x:Name="FormTitle" 
                             Text="Добавление студента" 
                             FontSize="20"
                             FontWeight="Medium"
                             Foreground="{DynamicResource MaterialDesignBody}"/>
                </Border>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="24">
                    <StackPanel Width="400">

                        
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Логин *" FontSize="14" FontWeight="Medium" Margin="0,0,0,4"
                                     Foreground="{DynamicResource MaterialDesignBody}"/>
                            <TextBox x:Name="LoginTextBox"
                                     materialDesign:HintAssist.Hint="Минимум 5 символов">
                                <TextBox.Text>
                                    <Binding Path="Login" UpdateSourceTrigger="PropertyChanged">
                                        <Binding.ValidationRules>
                                            <validation:RequiredRule/>
                                            <validation:MinLengthRule MinLength="5"/>
                                        </Binding.ValidationRules>
                                    </Binding>
                                </TextBox.Text>
                            </TextBox>
                            <ItemsControl Foreground="{DynamicResource MaterialDesignValidationErrorBrush}" FontSize="12"
                                        ItemsSource="{Binding ElementName=LoginTextBox, Path=(Validation.Errors)}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ErrorContent}" TextWrapping="Wrap" Margin="4,2,0,0"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                       
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Имя *" FontSize="14" FontWeight="Medium" Margin="0,0,0,4"
                                     Foreground="{DynamicResource MaterialDesignBody}"/>
                            <TextBox x:Name="NameTextBox"
                                     materialDesign:HintAssist.Hint="Введите полное имя">
                                <TextBox.Text>
                                    <Binding Path="Name" UpdateSourceTrigger="PropertyChanged">
                                        <Binding.ValidationRules>
                                            <validation:RequiredRule/>
                                        </Binding.ValidationRules>
                                    </Binding>
                                </TextBox.Text>
                            </TextBox>
                            <ItemsControl Foreground="{DynamicResource MaterialDesignValidationErrorBrush}" FontSize="12"
                                        ItemsSource="{Binding ElementName=NameTextBox, Path=(Validation.Errors)}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ErrorContent}" TextWrapping="Wrap" Margin="4,2,0,0"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                        
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Email *" FontSize="14" FontWeight="Medium" Margin="0,0,0,4"
                                     Foreground="{DynamicResource MaterialDesignBody}"/>
                            <TextBox x:Name="EmailTextBox"
                                     materialDesign:HintAssist.Hint="example@domain.com">
                                <TextBox.Text>
                                    <Binding Path="Email" UpdateSourceTrigger="PropertyChanged">
                                        <Binding.ValidationRules>
                                            <validation:RequiredRule/>
                                            <validation:EmailRule/>
                                        </Binding.ValidationRules>
                                    </Binding>
                                </TextBox.Text>
                            </TextBox>
                            <ItemsControl Foreground="{DynamicResource MaterialDesignValidationErrorBrush}" FontSize="12"
                                        ItemsSource="{Binding ElementName=EmailTextBox, Path=(Validation.Errors)}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ErrorContent}" TextWrapping="Wrap" Margin="4,2,0,0"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                        
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Пароль *" FontSize="14" FontWeight="Medium" Margin="0,0,0,4"
                                     Foreground="{DynamicResource MaterialDesignBody}"/>
                            <TextBox x:Name="PasswordTextBox"
                                     materialDesign:HintAssist.Hint="Минимум 8 символов: A-Z, a-z, 0-9, спецсимволы">
                                <TextBox.Text>
                                    <Binding Path="Password" UpdateSourceTrigger="PropertyChanged">
                                        <Binding.ValidationRules>
                                            <validation:RequiredRule/>
                                            <validation:PasswordRule/>
                                        </Binding.ValidationRules>
                                    </Binding>
                                </TextBox.Text>
                            </TextBox>
                            <ItemsControl Foreground="{DynamicResource MaterialDesignValidationErrorBrush}" FontSize="12"
                                        ItemsSource="{Binding ElementName=PasswordTextBox, Path=(Validation.Errors)}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ErrorContent}" TextWrapping="Wrap" Margin="4,2,0,0"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>

                      
                        <StackPanel Margin="0,0,0,16" Visibility="Collapsed">
                            <TextBlock Text="Дата создания" FontSize="14" FontWeight="Medium" Margin="0,0,0,4"
                                     Foreground="{DynamicResource MaterialDesignBody}"/>
                            <DatePicker x:Name="DatePicker" IsEnabled="False">
                                <DatePicker.SelectedDate>
                                    <Binding Path="CreatedAt" UpdateSourceTrigger="PropertyChanged">
                                        <Binding.ValidationRules>
                                            <validation:DateRule/>
                                        </Binding.ValidationRules>
                                    </Binding>
                                </DatePicker.SelectedDate>
                            </DatePicker>
                            <ItemsControl Foreground="{DynamicResource MaterialDesignValidationErrorBrush}" FontSize="12"
                                        ItemsSource="{Binding ElementName=DatePicker, Path=(Validation.Errors)}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding ErrorContent}" TextWrapping="Wrap" Margin="4,2,0,0"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>

                <Border Grid.Row="2" 
                        Background="{DynamicResource MaterialDesignToolBarBackground}"
                        Padding="24,16">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="SaveButton" 
                                Click="save" 
                                Content="Сохранить в БД">
                            <Button.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="ContentSave" Width="16" Height="16" Margin="0,0,8,0"/>
                                        <TextBlock Text="Сохранить в БД" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Button.ContentTemplate>
                        </Button>

                        <Button Click="back" 
                                Content="Назад"
                                Margin="16,0,0,0">
                            <Button.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="ArrowLeft" Width="16" Height="16" Margin="0,0,8,0"/>
                                        <TextBlock Text="Назад" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Button.ContentTemplate>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>
        </materialDesign:Card>
    </Grid>
</Page>